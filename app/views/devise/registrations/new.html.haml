= image_tag 'Rectangle.png', class:'img_login'

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :account, class:'label_account'
    %br/
    = f.text_field :account, autofocus: true, class:'box_account'
    %hr.hr1/
  .field
    = f.label :email, class:'label_email'
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class:'box_email'
    %hr.hr2
  .field
    = f.label :password, class:'label_password'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", class:'box_password'
    %hr.hr3
  .actions
    = f.submit "CREATE ACCOUNT", class:'btn_create_account'
= render "devise/shared/links"
